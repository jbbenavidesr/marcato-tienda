{% extends "layouts/base.njk" %}
{% block content %}
    <section class="[ hero ]">
        <div class=" [ wrapper wrapper--sm ]">
            <h1>{{ pageHeader.main }}</h1>
        </div>
    </section>
    <section>
        <div class="wrapper">
            <header>
                <h2>About: Lorem ipsum dolor sit amet consectetur adipisicing elit. Magni, aliquam.</h2>
            </header>
            <div>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Animi, commodi incidunt ad voluptates quisquam labore a amet beatae neque modi, exercitationem explicabo optio earum voluptate dolorum numquam? Modi, nemo sed.</p>
            </div>
        </div>
    </section>
    {% if partituras.length %}
        <section>
            <div class="wrapper">
                <header>
                    <h2>Tienda</h2>
                </header>
                <div>
                    {% for partitura in partituras %}
                        <article>
                            <div>
                                <img src="http://localhost:1337{{ partitura.preview[0].url }}" alt=""/>
                            </div>
                            <div>
                                <h3>{{ partitura.title }}</h3>
                                <a href="" class="button">Comprar</a>
                            </div>
                        </article>
                    {% endfor %}
                </div>
                <div>
                    <a href="/catalogo/" class="button">Toda la tienda</a>
                </div>
            </div>
        </section>
    {% endif %}
    <section>
        <div class="wrapper">
            <header>
                <h2>Blog</h2>
            </header>
            {% for item in blog %}
                <h3>{{ item.Titulo }}</h3>
            {% endfor %}
        </div>
    </section>
    <section>
        <div class="wrapper">
            <header>
                <h2>Contacto</h2>
            </header>
            <div>
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Delectus quo ipsa placeat autem nihil quod odit quam pariatur tempore eum.</p>
                <img src="" alt=""/>
            </div>
        </div>
    </section>
{% endblock %}