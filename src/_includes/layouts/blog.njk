{% extends "layouts/base.njk" %}
{% block content %}
    <section class="[ featured-blog-posts-section ]">
        <header class="[ featured-blog-posts-section__heading ] [ align-center ]">
            <h1>{{ title }}</h1>
        </header>
        <div class="wrapper">
            <article class="[ gallery ] [ flow flow-space-800 ]">
                {% for item in blogPosts %}
                    <figure class="[ gallery__item ] [ flow ]">
                        <div class="[ gallery__media ]">
                            {% image item.imagen.sys.id, contentful.assets %}
                        </div>
                        <figcaption class="[ gallery__content ] [ flow ]">
                            <h2 class="[ gallery__heading ]">
                                {{ item.title }}
                            </h2>
                            <a href="/blog/{{ item.slug |slug }}/" class="btn">Leer m√°s</a>
                        </figcaption>
                    </figure>
                {% endfor %}
            </article>
            {% include "partials/pagination.njk" %}
        </div>
    </section>
{% endblock %}